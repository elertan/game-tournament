extends ../main.jade

block content
	div(ng-controller="ProfileShow")
		h1 Profiel
		p {{ profileUser.firstname }}  {{ profileUser.lastname }}
		h1 Hobby: {{ profileUser.hobby }}
		
		div(ng-show="isMe")
			form#groupcreateform.col-md-offset-3.col-md-6(style="margin-top: 20px;")
			input.form-control(type="text", style="margin-bottom: 5px;", placeholder="hobby", ng-model="hobby")
			input.form-control(type="submit", ng-click="changeProfile()", value="Change Profile", style="margin-top: 10px;")
		
		
		