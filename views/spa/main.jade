div(ng-controller="Main")
	nav.navbar.navbar-default.navbar-fixed-top
		div.container
			div.navbar-header
				button.navbar-toggle.collapsed(type="button", data-toggle="collapse", data-target="#navbar", aria-expanded="false", aria-controls="navbar")
					span.sr-only Toggle Navigation
					span.icon-bar
					span.icon-bar
					span.icon-bar
				a.navbar-brand(ui-sref="index") Game Tournament
			div#navbar.navbar-collapse.collapse
				ul.nav.navbar-nav
					li.active
						a(ui-sref="index")
							i.fa.fa-home
							| &nbsp;Home
					li
						a(ui-sref="about")
							i.fa.fa-info
							| &nbsp;Over Ons
				ul.nav.navbar-nav(ng-show="loggedIn")
					li
						a(ui-sref="groups")
							i.fa.fa-group
							| &nbsp;Groepen
					li
						a(ng-click="showChat()")
							i.fa.fa-comments
							| &nbsp;Chats
				ul.nav.navbar-nav.navbar-right
					li(ng-show="!loggedIn")
						a(ui-sref="auth/login") Login
					li(ng-show="!loggedIn")
						a(ui-sref="auth/register") Register
					li.dropdown-toggle(ng-show="loggedIn")
						a(data-toggle="dropdown", role="button", aria-haspopup="true", aria-expanded="false") 
							| {{ user.firstname + ' ' + user.lastname }}&nbsp;
							span.caret
						ul.dropdown-menu
							li
								a(ui-sref="profile/show({ studentNumber: user.studentnumber })")
									i.fa.fa-user
									| &nbsp;Profiel
							li
								a(ui-sref="mygames({ studentNumber: user.studentnumber })")
									i.fa.fa-keyboard-o
									| &nbsp;Mijn Games
							li
								a(ui-sref="inbox")
									i.fa.fa-inbox
									| &nbsp;Inbox &nbsp;
									span.label.label-pill.label-danger(ng-show="true") 1
							li
								a(ng-click="logout()")
									i.fa.fa-sign-out
									| &nbsp;Logout
				
	div.container(style="margin-top: 50px;")
		block content
block scripts