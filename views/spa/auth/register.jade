extends ../main.jade

block scripts
	script(src="/public/js/spa/auth/register.js")
block content
	div(ng-controller="AuthRegister")
		h3(style="color: red") {{ errorMsg }}
		h3(style="color: #00DD00") {{ msg }}
		form#loginform.col-md-offset-3.col-md-6(style="margin-top: 20px;")
			input.form-control(type="text", placeholder="Leerling Nummer", ng-model="studentnumber")
			button.btn.btn-default(ng-click="processForm()", style="width: 100%;") Registreer