extends ../main.jade

block content
	div(ng-controller="AuthLogin")
		form#registerform.col-md-offset-3.col-md-6(style="margin-top: 20px;")
			input.form-control(style="margin-bottom: 5px;", type="text", placeholder="Studentnummer", ng-model="studentNumber")
			input.form-control(type="text", placeholder="Password", ng-model="password")
			input.form-control(ng-click="processForm()", type="submit", value="Login", style="margin-top: 10px;")
			button.form-control.btn.btn-danger(ng-click="forgotPassword()", style="margin-top: 10px;") Wachtwoord vergeten
